@page "/viewer"

@using Forge4BlazorRCL;
@inject Forge4BlazorRCL.ForgeApiService ForgeApiService;
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<div class="container-fluid d-flex h-100">
    <div class="flex-fill bg-warning">
        <h1>Viewer (@x, @y)</h1> <button @onclick="toggleViewer">Toggle</button>
        <ForgeViewerComponent styleParameter="position: relative; height: calc(100% - 100px); width: calc(100% - 0px);"
                              urn="@urn" file="@file" XYChanged="(Func<Tuple<double, double>, Task>)OnXYChange">

        </ForgeViewerComponent>
    </div>
</div>


@code {
    double x { get; set; }
    double y { get; set; }

    string urn = null;
    string file = null;

    private void toggleViewer()
    {
        urn = urn == null ? Configuration.GetValue<string>("Forge:SampleUrn") : null;
        file = file == null ? "pdfs/bldg_8_2.pdf" : null;
    }

    protected override async Task OnInitializedAsync()
    {
        file = "pdfs/bldg_8_2.pdf";

        ForgeApiService.SetClientIdAndSecret(Configuration.GetValue<string>("Forge:ClientId"), Configuration.GetValue<string>("Forge:ClientSecret"));

    }


    async Task OnXYChange(Tuple<double, double> aXY)
    {
        this.x = aXY.Item1;
        this.y = aXY.Item2;
    }
}